  		<version>1.5.0</version>
  	</dependency>
  	<dependency>
  		<groupId>org.jboss.weld.se</groupId>
  		<artifactId>weld-se</artifactId>
  		<version>2.1.0.Final</version>
  		<optional>true</optional>
  	</dependency>
  </dependencies>
</project>